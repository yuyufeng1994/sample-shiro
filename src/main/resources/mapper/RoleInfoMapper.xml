    <select id="listByUserId" resultType="top.yuyufeng.learn.shiro.orm.po.RoleInfo">
SELECT
    r.role_id,
    role_name,
    IF (u.user_id IS NULL, 0, 1) AS role_status
FROM
    role_info r
LEFT JOIN (
    SELECT
        *
    FROM
        user_role_info
    WHERE
        user_id = #{userId,jdbcType=BIGINT}
    ) u ON r.role_id = u.role_id
  </select>

